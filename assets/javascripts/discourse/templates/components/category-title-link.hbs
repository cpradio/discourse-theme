<a href={{category.url}}>
  {{#if category.read_restricted}}
    {{fa-icon 'lock'}}
  {{/if}}

  <span class="category-name" style="background: #{{category.color}}; color: #{{category.text_color}}">{{category.name}}</span>

  {{#if category.uploaded_logo.url}}
    <div>{{cdn-img src=category.uploaded_logo.url class="category-logo"}}</div>
  {{/if}}
</a>
